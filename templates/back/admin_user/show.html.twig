{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="admin-page">


{{ include('back/index.html.twig') }}

    <div class="content">

    <div>

    <header>
        <a href="{{ path('app_admin_user_index') }}" class="back-btn">
            <i class="fi fi-rs-arrow-left"></i> back to list
        </a>
        <h3>User</h3>
    </header>

    <table class="table show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ user.zipcode }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('back/admin_user/_delete_form.html.twig') }}
