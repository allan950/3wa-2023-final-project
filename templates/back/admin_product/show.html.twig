{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="admin-page">


{{ include('back/index.html.twig') }}

    <div class="content">

    <div>

    <header>
        <a href="{{ path('app_admin_product_index') }}" class="back-btn">
        <i class="fi fi-rs-arrow-left"></i> back to list
        </a>

        <h3>Product</h3>
    </header>

    <table class="table show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price|format_currency('EUR') }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Anime</th>
                <td>{{ product.anime }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('back/admin_product/_delete_form.html.twig') }}
    </div>
    </div>
    </div>
{% endblock %}
