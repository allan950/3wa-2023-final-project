{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

<div class="admin-page">


{{ include('back/index.html.twig') }}

<div class="content">

    <div class="full-width">

    <section class="metrics">
        <div class="count">
            <div class="label"><b>Number of categories</b></div>
            <div class="output"><span>{{categories | length}}</span></div>
        </div>
    </section>

    <table class="table">
        <thead>
            <tr class="left">
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.label }}</td>
                <td class="actions">
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}" title="Show details">
                        <i class="fi fi-rs-eye"></i>
                    </a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" title="Edit">
                        <i class="fi fi-rs-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no categories found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}" class="large-btn add-new">Add new category</a>

    <div class="spacer"></div>

</div>
</div>
</div>
{% endblock %}
