            </div>
        </div>
        <div class="total">
            <h6>{{(item.price * item.quantity)|format_currency('EUR')}}</h6>
        </div>
    </div>
    {# {% endif %} #}

    {% endfor %}

    {% if order.items|length > 2 %}
    <div style="text-align: center;"><button class="large-btn" onclick="openModal({{order.items|json_encode()}})" {# onclick="{% set modalItems = order.items %}" #}>See more</button></div>

    {% endif %}
  </div>
  <div class="totals">
    <div class="">
        <h6>Sous-total</h6>
        <h5>{{order.totalPriceHt|format_currency('EUR')}}</h5>
    </div>
    <br>
    <br>
    <div class="">
        <h6>Total</h6>
        <strong>{{order.totalPriceTtc|format_currency('EUR')}}</strong>
    </div>
