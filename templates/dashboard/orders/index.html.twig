        <script>
        function openModal(items) {
            const modal = document.getElementById('more-item-modal');

            //modal.classList.add("open");

            console.log(items);

            function generateModal(items) {
                let modal = `
                <div class="modal" id="more-item-modal">
        <header>
            <h4>Complete product list</h4>
        </header>
        <div>
            <ul>`;

                for (let i in items) {
                    modal += `
                        <li>
    <div class="item">
        <div>
            <b>${parseInt(i)+1}</b>
        </div>
        <div class="">
            <img src="${items[i].image}" alt="${items[i].name}" height="80">
        </div>
        <div class="">
            <h5 class="">${items[i].name}</h5>
            <div class="horizontal">
                <p class="">Price <b>&euro;${items[i].price.toFixed(2)}</b></p>
                <p class="">Quantity <b>${items[i].quantity}</b></p>
            </div>
        </div>
        <div class="total">
            <b>&euro;${(items[i].price * items[i].quantity).toFixed(2)}</b>
        </div>
    </div>
    </li>
                    `;
                }
            modal += `</ul>
        </div>
        <footer>
            <button class="large-btn" onclick="document.getElementById('more-item-modal').remove();document.getElementsByClassName('backdrop')[0].remove()">Close</button>
        </footer>
    </div>
    <div class="backdrop"></div>
    `;

            return modal;
            }

            console.log(document.getElementsByTagName('main')[0]);

            document.getElementsByTagName('main')[0].innerHTML += generateModal(items);
        }
    </script>



